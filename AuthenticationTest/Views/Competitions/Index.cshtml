@model IEnumerable<AuthenticationTest.Models.Competition>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<div class="header">
    <h1>Current Events</h1>
</div>
@if (User.IsInRole("Staff"))
{
    <p>
        <a asp-action="Create" class="btn btn-interactsecondary">Create New</a>
    </p>
}
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Credit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                @if (User.IsInRole("Staff"))
                {
                    <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-interact">Edit</a> 
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-interact">Details</a> 
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-interact">Delete</a>
                    </td>
                }
                @if (User.IsInRole("Student"))
                {
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-interact">Details</a>
                    </td>
                }
            </tr>
            }
        </tbody>
    </table>
