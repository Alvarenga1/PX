@{
    ViewData["Title"] = "Student Competition Hub";
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/competition.png" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/develop.png" alt="Second slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<hr />

<div class="row">
    <div class="col-sm-6">
        <h2>Welcome to Student Competitions Hub!</h2>
        <p>We have many competitions available join now to learn new skills and earn credits towards your degree!</p>
    </div>
    <div class="col-sm-6">
        <h2>Useful links</h2>
        <ul>
            <li><a href="https://www.westernsydney.edu.au/">Western Sydney University</a></li>
        </ul>
    </div>
</div>