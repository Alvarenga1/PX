@{
    ViewData["Title"] = "Student Competition Hub";
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/competition.png" alt="First slide" asp-append-version="true">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/develop.png" alt="Second slide" asp-append-version="true">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<hr />

<div class="row">
    <div class="col-sm-6">
        <h2>Welcome to Student Competitions Hub!</h2>
        <p>We have many competitions available join now to learn new skills and earn credits towards your degree!</p>
    </div>
    <div class="col-sm-6">
        <h2>Featured Event</h2>
        @if (ViewBag.recentEvent != null)
        {
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@ViewBag.recentEvent.Name</h5>
            <h6 class="card-subtitle mb-2 text-muted">@ViewBag.recentEvent.Date</h6>
            <p class="card-text">@ViewBag.recentEvent.Description</p>
            <a class="card-link" asp-action="Details" asp-route-id="@ViewBag.recentEvent.Id" asp-controller="Competitions">More</a>
        </div>
    </div>
        }
        else
        {
            <p>The are currently no events.</p>
        }
    </div>
</div>