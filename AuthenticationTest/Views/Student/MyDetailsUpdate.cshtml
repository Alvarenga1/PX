@model AuthenticationTest.Models.Student

@using Microsoft.AspNetCore.Identity

@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "My Details";
}

<h2>MyDetails</h2>

<h4>Welcome, @UserManager.GetUserName(User)! You can modify your details below before browsing other links. </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* The form action should be /Customers/MyDetailsUpdate . *@
        <form asp-action="MyDetailsUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* This hidden field is necessary, as the web form must contain it to
                make all properties of the Customer class present. *@
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}