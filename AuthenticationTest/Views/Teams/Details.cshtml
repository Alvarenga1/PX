@model AuthenticationTest.Models.Team

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<h1>Details</h1>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <div><h4>Members</h4></div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Email
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.members)
            {

                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Email
                    </td>
                    @if (ViewBag.email == Model.TeamLeaderEmail)
                    {
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Email" class="removetext">Remove From Team</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
    @if (ViewBag.email == Model.TeamLeaderEmail)
    {
        <form asp-action="Invite">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">Invite a Student</label>
                <input class="form-control" type="text" id="email" placeholder="Student Email E.g: 12345678@student.westernsydney.edu.au" name="email" />
            </div>
            <div class="form-group">
                <input type="submit" value="Invite" class="btn btn-interact" />
            </div>
        </form>
    }

    <a asp-action="Index" class="btn btn-back">Back to List</a>

    @if (ViewBag.email == Model.TeamLeaderEmail)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-interact">Edit</a>
    }
</div>
